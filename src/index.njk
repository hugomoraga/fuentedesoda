{% include 'header.njk' %}


<section id="home-slider" class="relative">
    <ul class="controls" id="customize-controls" aria-label="Carousel Navigation" tabindex="0">
        <li class="prev" data-controls="prev" aria-controls="customize" tabindex="-1">
            <i class="fas fa-angle-left fa-4x"></i>
        </li>
        <li class="next" data-controls="next" aria-controls="customize" tabindex="-1">
            <i class="fas fa-angle-right fa-4x"></i>          
        </li>
    </ul>
    <div class="home-slider-container">
        <div>
            <img src="{{ '/assets/img/slider1.png' | url }}" alt="" />
        </div>
        <div>
          <img src="{{ '/assets/img/slider2.jpg' | url }}"alt=""/>
        </div>
        <div>
          <img src="{{ '/assets/img/slider3.jpg' | url }}" alt=""/>
        </div>
    </div>

</section>




<style>

    .home-slider-container img {
        max-height: 800px;
        object-fit: cover;
        width: 100%;
        object-position: center;
    }


  #home-slider {
        overflow: hidden;
        position:relative;
      
    }
    
    .controls li {
      color: #919932;
    }
    
    .controls {
        margin: 0;
        padding: 0;
        list-style: none;
        position: absolute;
        left: 5%;
        width: 90%;
        top: 45%;
        transform: translatey(-50%);
        display: flex;
        align-items: center;
        justify-content: space-between;
        z-index: 10;
    }
    
    .controls:focus {
      outline: none;
    }
    
    .controls li:hover {
      cursor: pointer;
    }
    .tns-nav>.tns-nav-active {
      background: rgb(190, 189, 189) !important;
    }
    .tns-nav>[aria-controls] {
      width: 12px;
      height: 12px;
      padding: 0;
      margin: 0 10px;
      border-radius: 50%;
      background: rgb(146, 137, 137);
      border: 0;
    }
    .tns-nav {
      text-align: center;
      margin: 10px 0;
    }
     .tns-controls button { 
      display: inline-block;
      padding: 8px 16px;
      background-color:  #04AA6D;
      color: white;
      border-radius: 50%;
      border: 0px;
      font-weight: 700;
      font-size: 20px;
    
     }
    
    .tns-controls button:hover { 
        background-color: #ddd;
      color: black;
    }
    .tns-controls {
        margin-top: 20px;
        margin-left: 10px;
        position: absolute;
        z-index: 10;
    }
    
    </style>